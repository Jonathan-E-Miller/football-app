@model List<FootballAppUI.Models.TeamViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Setup</h1>
    <p>Create teams, players and leagues</p>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col">
        <div class="card m-2 h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Create a Team</h5>
                <p class="card-text mb-4">Create a new team, set their home venue and add players</p>
                <a href="@Url.ActionLink("Teams", "Setup")" class="btn btn-primary mt-auto">Add Team</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card m-2 h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Create a League</h5>
                <p class="card-text mb-4">A new League</p>
                <a href="@Url.ActionLink("Leagues", "Setup")" class="btn btn-primary mt-auto">Create a League</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card m-2 h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Create a Season</h5>
                <p class="card-text mb-4">A new Season</p>
                <button id="myBtn" class="btn btn-primary mt-auto">Create a League</button>
                <!--<a href="@Url.ActionLink("Seasons", "Setup")" class="btn btn-primary mt-auto">Create a League</a>-->
            </div>
        </div>
    </div>
</div>

<!-- The Modal -->
<div id="myModal" class="modal-jm">

    <!-- Modal content -->
    <div class="modal-content-jm">
        <div class="left-half">
            <p>Some text in the Modal..</p>
            <h1>Some more text</h1>
        </div>
        <div class="right-half">
            <ul>
                <li>Hello</li>
                <li>World</li>
            </ul>
        </div>
        <span class="close-jm p-2">&times;</span>
    </div>
</div>

<script>
    // Get the modal
    var modal = document.getElementById("myModal");

    // Get the button that opens the modal
    var btn = document.getElementById("myBtn");

    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close-jm")[0];

    // When the user clicks the button, open the modal
    btn.onclick = function() {
        modal.style.display = "flex";
    }

    // When the user clicks on <span> (x), close the modal
    span.onclick = function() {
        modal.style.display = "none";
    }

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function(event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
</script>