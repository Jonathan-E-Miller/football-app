@model List<FootballAppUI.Models.TeamViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Setup</h1>
    <p>Create teams, players and leagues</p>
</div>

<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Create a Team</h5>
                <p class="card-text">Create a new team, set their home venue and add players</p>
                <a href="@Url.ActionLink("Teams", "Setup")" class="btn btn-primary">Add Team</a>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Create a League</h5>
                <p class="card-text">A new League</p>
                <a href="@Url.ActionLink("Leagues", "Setup")" class="btn btn-primary">Create a League</a>
            </div>
        </div>
    </div>
</div>