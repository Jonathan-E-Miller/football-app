@model List<FootballAppUI.Models.TeamViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Setup</h1>
    <p>Create teams, players and leagues</p>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col">
        <div class="card m-2 h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Create a Team</h5>
                <p class="card-text mb-4">Create a new team, set their home venue and add players</p>
                <a href="@Url.ActionLink("Teams", "Setup")" class="btn btn-primary mt-auto">Add Team</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card m-2 h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Create a League</h5>
                <p class="card-text mb-4">A new League</p>
                <a href="@Url.ActionLink("Leagues", "Setup")" class="btn btn-primary mt-auto">Create a League</a>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card m-2 h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Create a Season</h5>
                <p class="card-text mb-4">A new Season</p>
                <a href="@Url.ActionLink("Seasons", "Setup")" class="btn btn-primary mt-auto">Create a League</a>
            </div>
        </div>
    </div>
</div>