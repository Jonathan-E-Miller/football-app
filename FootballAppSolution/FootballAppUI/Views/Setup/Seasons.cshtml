@model FootballAppUI.Models.SeasonViewModel

<div id="wizard-header">
    <h1>Create a season wizard</h1>
</div>
@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <div id="step-1">
        <h1>Step 1 </h1>
        @Html.LabelFor(vm => vm.SelectedLeague)
        @Html.DropDownListFor(vm=>vm.SelectedLeague, new SelectList(Model.Leagues))
        <button class="btn btn-primary">Continue</button>
    </div>

    <div id="step-2">
        <h1>Step 2</h1>
    </div>
}